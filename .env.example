# ─── Typhoon API (OpenAI-compatible endpoint) ───────────────────────────────
TYPHOON_API_KEY=your_key_here
TYPHOON_BASE_URL=https://api.opentyphoon.ai/v1
TYPHOON_MODEL=typhoon-v2.5-30b-a3b-instruct
TYPHOON_MAX_TOKENS=8192
ALLOW_OLLAMA_CHAT_FALLBACK=false  # false=Option A (Typhoon-only chat), true=Option B

# ─── Ollama (chat fallback + embeddings) ─────────────────────────────────────
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=scb10x/typhoon2.5-qwen3-30b-a3b:latest
OLLAMA_EMBED_MODEL=nomic-embed-text

# ─── Pipeline Options ─────────────────────────────────────────────────────────
SUMMARIZE_MODE=agenda
INCLUDE_OCR=true
IMAGE_INSERT_ENABLED=true
SAVE_INTERMEDIATE=true

# ─── Image Insertion ──────────────────────────────────────────────────────────
IMAGE_BASE_DIR=./data/video_change_ocr/run_20260213_163003
IMAGE_EMBED_MODE=base64
IMAGE_MAX_PER_TOPIC=4
IMAGE_MIN_FILE_SIZE_KB=30

# ─── Runtime Control ──────────────────────────────────────────────────────────
LLM_MAX_RETRIES=3
LLM_TIMEOUT_SEC=120
AGENT1_CHUNK_SIZE=120
AGENT1_CHUNK_OVERLAP=1
AGENT1_SUBCHUNK_ON_FAILURE=true
AGENT1_SUBCHUNK_SIZE=40
AGENT1_OCR_MAX_CAPTURES=3
AGENT1_OCR_SNIPPET_CHARS=220
AGENT2_CHUNK_SIZE=160
AGENT25_CHUNK_SIZE=12
PIPELINE_MAX_CONCURRENCY=1

# ─── IO Paths ─────────────────────────────────────────────────────────────────
TRANSCRIPT_PATH=./data/transcript_2025-01-04.json
CONFIG_PATH=./data/config_2025-01-04.json
OCR_PATH=./data/video_change_ocr/run_20260213_163003/capture_ocr_results.json
OUTPUT_HTML_PATH=./output/meeting_report.html
